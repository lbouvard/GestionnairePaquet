@model GestionnairePaquet.Models.ApplicationUser

@{
    ViewBag.Title = "Suppression compte";
}

<h2>Suppression d'un compte</h2>

<h3>Etes-vous sur de vouloir supprimer ce compte ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink(
            "Retour",
            "Comptes",
            new { Id = Model.SocieteId }
            )
        </div>
    }
</div>

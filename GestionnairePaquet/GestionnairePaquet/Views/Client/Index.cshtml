@model IEnumerable<GestionnairePaquet.Models.Produit>

@{
    ViewBag.Title = "Choississez un produit";
}
<h2>Liste des produits</h2>
@if (Model.Count() > 0)
{

    for (int i = 0; i < Model.Count(); i += 3)
    {
        <div class="row">
            @for (int j = i; j < i + 3; j++)
            {
                var item = Model.ElementAt(j);

                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="~/Content/Images/@item.Icone" alt="@item.Nom">
                        <div class="caption">
                            <h3>@item.Nom</h3>
                            <p>@item.Description</p>
                            <p>
                                @Html.ActionLink("Choisir", "Version", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
                            </p>
                        </div>
                    </div>
                </div>

                if (j + 1 > Model.Count() - 1)
                {
                    break;
                }  
            }
        </div>
    }
}
